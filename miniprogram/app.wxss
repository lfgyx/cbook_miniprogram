/**app.wxss**/
.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0 250rpx;
    box-sizing: border-box;
}

.modal {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.modal-content {
  background: white;
  padding: 30px;
  border-radius: 10px;
  box-sizing: border-box;
  width: 95%;
  margin-top: -100px;
}


.confirm-btn {
  background-color: #09be61;
  color: white;
}

.confirm-btn:hover {
  background-color: #06B153;
}

.confirm-btn:active {
  background-color: #05A344;
  transform: scale(0.98);
}

.button-box {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.button-box button {
  padding: 2rpx 0;
  margin-top: 10px;
  border-radius: 5px;
  box-sizing: border-box;
  flex-basis: 45%;
}


.input-box {
  margin-bottom: 10px;
  padding-top: 10px;
}

.input-box input {
  border: 1px solid #ddd;
  border-radius: 5px;
  padding: 10px;
}
